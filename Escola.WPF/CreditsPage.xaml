<Page x:Class="Escola.WPF.CreditsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Escola.WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreditsPage">

  
    <Grid>
      

        <TextBlock Text="Credits"
                   FontSize="32"
                   FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,30,0,0"/>

        <!-- Créditos -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Developed by: Juacira Rosa"
                       Foreground="Black"
                       FontSize="18"
                       Margin="0,10"/>
           
            <TextBlock Text="Version 1.0.0"
                       Foreground="Black"
                       FontSize="18"
                       Margin="0,10"/>
            
            <TextBlock Text="2025/05/24"
             Foreground="Black"
             FontSize="18"
             Margin="0,10"/>
        </StackPanel>

        <!-- Canvas para Confete -->
        <Canvas Name="ConfettiCanvas" IsHitTestVisible="False"/>

    </Grid>
</Page>
