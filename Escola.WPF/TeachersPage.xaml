<Page x:Class="Escola.WPF.TeachersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Escola.WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProfessoresPage">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Input Form for Professor Details -->
        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,10">
            <TextBlock Text="Professor Name" Margin="0,5"/>
            <TextBox Name="txtProfessorName" Width="200" Margin="0,5"/>

            <TextBlock Text="Phone" Margin="0,5"/>
            <TextBox Name="txtProfessorPhone" Width="200" Margin="0,5"/>

            <TextBlock Text="Email" Margin="0,5"/>
            <TextBox Name="txtProfessorEmail" Width="200" Margin="0,5"/>
        </StackPanel>

        <!-- Professors DataGrid -->
        <DataGrid Name="dgProfessors"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  SelectionMode="Single"
                  IsReadOnly="True"
                  Margin="0,10,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                <DataGridTextColumn Header="Name" Binding="{Binding FullName}" Width="*"/>
                <DataGridTextColumn Header="Phone" Binding="{Binding Phone}" Width="*"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Action Buttons -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Name="btnCreateProfessor" Content="Create Professor" Width="120" Margin="5" Click="btnCreateProfessor_Click"/>
            <Button Name="btnEditProfessor" Content="Edit Professor" Width="120" Margin="5" Click="btnEditProfessor_Click"/>
            <Button Name="btnDeleteProfessor" Content="Delete Professor" Width="120" Margin="5" Click="btnDeleteProfessor_Click"/>
        </StackPanel>

        <!-- Input Form for Subject Details -->
        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,10" VerticalAlignment="Bottom">
            <TextBlock Text="Subject Name" Margin="0,5"/>
            <TextBox Name="txtSubjectName" Width="200" Margin="0,5"/>
        </StackPanel>

        <!-- Subjects DataGrid -->
        <DataGrid Name="dgSubjects"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  SelectionMode="Single"
                  IsReadOnly="True"
                  Margin="0,10,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                <DataGridTextColumn Header="Subject Name" Binding="{Binding Name}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Action Buttons for Subject -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Name="btnCreateSubject" Content="Create Subject" Width="120" Margin="5" Click="btnCreateSubject_Click"/>
            <Button Name="btnEditSubject" Content="Edit Subject" Width="120" Margin="5" Click="btnEditSubject_Click"/>
            <Button Name="btnDeleteSubject" Content="Delete Subject" Width="120" Margin="5" Click="btnDeleteSubject_Click"/>
        </StackPanel>
    </Grid>

</Page>
