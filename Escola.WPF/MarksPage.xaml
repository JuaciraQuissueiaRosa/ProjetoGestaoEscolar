<Page x:Class="Escola.WPF.MarksPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:Escola.WPF"
      Title="MarksPage" Height="420" Width="636">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Text="Marks Page" FontSize="20" FontWeight="Bold" Margin="0,0,0,15" />

        <!-- Formulário de entrada -->
        <Grid Grid.Row="1" Margin="0,0,-14,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Aluno -->
            <StackPanel Grid.Column="0" Margin="5">
                <ComboBox x:Name="cbStudents"
                          DisplayMemberPath="FullName"
                          SelectedValuePath="Id"
                          SelectedValue="{Binding StudentId}" />
            </StackPanel>

            <!-- Disciplina -->
            <StackPanel Grid.Column="1" Margin="5">
                <ComboBox x:Name="cbSubjects"
                          DisplayMemberPath="Name"
                          SelectedValuePath="Id"
                          SelectedValue="{Binding SubjectId}" />
            </StackPanel>

            <!-- Tipo de avaliação -->
            <StackPanel Grid.Column="2" Margin="5">
                <Label Content="Assessment Type:" Width="120"/>
                <ComboBox x:Name="cbAssessmentType" Width="200"/>
            </StackPanel>

            <!-- Nota -->
            <StackPanel Grid.Column="3" Margin="5">
                <TextBlock Text="Score:"/>
                <TextBox Name="txtScore" Width="100" Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Ano -->
            <StackPanel Grid.Column="4" Margin="6">
                <TextBlock Text="Assessment Year:" Width="110"/>
                <TextBox x:Name="txtAssessmentYear" Width="120" Margin="0,6,0,0" />
            </StackPanel>
        </Grid>

        <!-- Botões -->
        <StackPanel Orientation="Horizontal"
                    Grid.Row="2"
                    HorizontalAlignment="Left"
                    Margin="0,0,0,15">
            <Button Name="btnCreate" Content="Create" Width="100" Margin="5" Click="btnCreate_Click"/>
            <Button Name="btnEdit" Content="Edit" Width="100" Margin="5" Click="btnEdit_Click"/>
            <Button Name="btnDelete" Content="Delete" Width="100" Margin="5" Click="btnDelete_Click"/>
            <Button Name="btnReloadFinalAverages" Content="Recarregar Médias Finais" Width="180" Margin="5" Click="btnReloadFinalAverages_Click"/>
        </StackPanel>

        <!-- Grade com duas colunas para as DataGrids lado a lado -->
        <Grid Grid.Row="3" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Tabela de Notas -->
            <DataGrid Name="dgMarks"
                      Grid.Column="0"
                      AutoGenerateColumns="False"
                      SelectionMode="Single"
                      IsReadOnly="True"
                      Margin="0,0,10,0"
                      SelectionChanged="dgMarks_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                    <DataGridTextColumn Header="Student" Binding="{Binding StudentName}" Width="*"/>
                    <DataGridTextColumn Header="Subject" Binding="{Binding SubjectName}" Width="*"/>
                    <DataGridTextColumn Header="Assessment Type" Binding="{Binding AssessmentType}" Width="*"/>
                    <DataGridTextColumn Header="Assessment Year" Binding="{Binding AssessmentDate}" Width="*"/>
                    <DataGridTextColumn Header="Score" Binding="{Binding Grade}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Tabela de Médias Finais -->
            <DataGrid x:Name="dgFinalAverages"
                      Grid.Column="1"
                      AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Aluno" Binding="{Binding StudentId}" />
                    <DataGridTextColumn Header="Disciplina" Binding="{Binding SubjectId}" />
                    <DataGridTextColumn Header="Média" Binding="{Binding Average, StringFormat=F2}" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!-- Label de Média Final -->
        <Label x:Name="lblFinalAverage"
               Grid.Row="4"
               HorizontalAlignment="Left"
               FontWeight="Bold"
               FontSize="14"
               Content="Média Final: -"
               Margin="10,5,0,5"/>
    </Grid>
</Page>