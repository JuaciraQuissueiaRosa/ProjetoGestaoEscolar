<Page x:Class="Escola.WPF.TimeTablesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Escola.WPF"
      mc:Ignorable="d" d:DesignWidth="800"
      Title="TimeTablePage" Height="674">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- DataGrid para exibir os horários -->
        <DataGrid x:Name="dgTimeTable" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="10" 
              AutoGenerateColumns="False" CanUserAddRows="False" SelectionMode="Single" Grid.Row="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" />
                <DataGridTextColumn Header="Class ID" Binding="{Binding ClassId}" />
                <DataGridTextColumn Header="Subject ID" Binding="{Binding SubjectId}" />
                <DataGridTextColumn Header="Teacher ID" Binding="{Binding TeacherId}" />
                <DataGridTextColumn Header="Day of Week" Binding="{Binding DayOfWeek}" />
                <DataGridTextColumn Header="Start Time" Binding="{Binding StartTime}" />
                <DataGridTextColumn Header="End Time" Binding="{Binding EndTime}" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- Campos de entrada para criar/editar horários -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10" Grid.Row="0">
            <!-- Class ID -->
            <Label Content="Class ID" HorizontalAlignment="Left" Margin="0,5" />
            <TextBox x:Name="txtClassId" Width="300" Margin="0,5" Padding="10" />

            <!-- Subject ID -->
            <Label Content="Subject ID" HorizontalAlignment="Left" Margin="0,5" />
            <TextBox x:Name="txtSubjectId" Width="300" Margin="0,5" Padding="10" />

            <!-- Teacher ID -->
            <Label Content="Teacher ID" HorizontalAlignment="Left" Margin="0,5" />
            <TextBox x:Name="txtTeacherId" Width="300" Margin="0,5" Padding="10" />

            <!-- Day of Week -->
            <Label Content="Day of Week" HorizontalAlignment="Left" Margin="0,5" />
            <TextBox x:Name="txtDayOfWeek" Width="300" Margin="0,5" Padding="10" />

            <!-- Start Time -->
            <Label Content="Start Time (HH:mm)" HorizontalAlignment="Left" Margin="0,5" />
            <TextBox x:Name="txtStartTime" Width="300" Margin="0,5" Padding="10" />

            <!-- End Time -->
            <Label Content="End Time (HH:mm)" HorizontalAlignment="Left" Margin="0,5" />
            <TextBox x:Name="txtEndTime" Width="300" Margin="0,5" Padding="10" />
        </StackPanel>

        <!-- Botões de Ação -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10" Grid.Row="2">
            <Button x:Name="btnCreate" Content="Create" Width="100" Margin="5" Padding="10" Click="btnCreate_Click"/>
            <Button x:Name="btnEdit" Content="Edit" Width="100" Margin="5" Padding="10" Click="btnEdit_Click"/>
            <Button x:Name="btnDelete" Content="Delete" Width="100" Margin="5" Padding="10" Click="btnDelete_Click"/>
        </StackPanel>
    </Grid>
</Page>
