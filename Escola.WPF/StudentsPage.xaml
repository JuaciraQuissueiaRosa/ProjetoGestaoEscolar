<Page x:Class="Escola.WPF.StudentsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Escola.WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AlunosPage">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Formulário de Entrada de Dados -->
        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,10">
            <TextBlock Text="Nome Completo" Margin="0,5" Background="Aqua"/>
            <TextBox Name="txtFullName" Width="200" Margin="0,5"/>

            <TextBlock Text="Data de Nascimento" Margin="0,5" Background="Aqua"/>
            <DatePicker Name="dpBirthDate" Width="200" Margin="0,5"/>

            <TextBlock Text="Telefone" Margin="0,5" Background="Aqua"/>
            <TextBox Name="txtPhone" Width="200" Margin="0,5" />

            <TextBlock Text="Endereço" Margin="0,5" Background="Aqua"/>
            <TextBox Name="txtAddress" Width="200" Margin="0,5"/>

            <TextBlock Text="Email" Margin="0,5" Background="Aqua"/>
            <TextBox Name="txtEmail" Width="200" Margin="0,5"/>

            <TextBox Name="txtSearch" Width="200" Margin="5" Background="Aqua" />
        </StackPanel>

        <!-- Tabela de Alunos -->
        <DataGrid Name="dgStudents"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  SelectionMode="Single"
                  IsReadOnly="True"
                  Margin="0,10,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                <DataGridTextColumn Header="Nome Completo" Binding="{Binding FullName}" Width="*"/>
                <DataGridTextColumn Header="Telefone" Binding="{Binding Phone}" Width="*"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                <DataGridTextColumn Header="Data de Nascimento" Binding="{Binding BirthDate}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Botões -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Name="btnCreate" Content="Criar" Width="100" Margin="5" Click="btnCreate_Click"/>
            <Button Name="btnEdit" Content="Editar" Width="100" Margin="5" Click="btnEdit_Click"/>
            <Button Name="btnDelete" Content="Apagar" Width="100" Margin="5" Click="btnDelete_Click"/>

            <Button Content="Search" Width="80" Margin="5" Click="btnSearch_Click"/>
          
        </StackPanel>
    </Grid>
</Page>
