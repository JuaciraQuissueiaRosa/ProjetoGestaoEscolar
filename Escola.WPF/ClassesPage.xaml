<Page x:Class="Escola.WPF.ClassesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Escola.WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TurmasPage">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Input Form for Class Details -->
        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,10">
            <TextBlock Text="Class Name" Margin="0,5"/>
            <TextBox Name="txtClassName" Width="200" Margin="0,5"/>

            <TextBlock Text="Group Name" Margin="0,5"/>
            <TextBox Name="txtGroupName" Width="200" Margin="0,5"/>

            <TextBlock Text="Schedule" Margin="0,5"/>
            <TextBox Name="txtSchedule" Width="200" Margin="0,5"/>
        </StackPanel>

        <!-- Classes DataGrid -->
        <DataGrid Name="dgClasses"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  SelectionMode="Single"
                  IsReadOnly="True"
                  Margin="0,10,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                <DataGridTextColumn Header="Class Name" Binding="{Binding ClassName}" Width="*"/>
                <DataGridTextColumn Header="Group Name" Binding="{Binding GroupName}" Width="*"/>
                <DataGridTextColumn Header="Schedule" Binding="{Binding Schedule}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Action Buttons -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Name="btnCreate" Content="Create" Width="100" Margin="5" Click="btnCreate_Click"/>
            <Button Name="btnEdit" Content="Edit" Width="100" Margin="5" Click="btnEdit_Click"/>
            <Button Name="btnDelete" Content="Delete" Width="100" Margin="5" Click="btnDelete_Click"/>
        </StackPanel>
    </Grid>
</Page>
