<Page x:Class="Escola.WPF.GradeSheetsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Escola.WPF"
      xmlns:oxy="http://oxyplot.org/wpf"
      mc:Ignorable="d"
      d:DesignHeight="650" d:DesignWidth="900"
      Title="GradeSheet">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="250"/>
            <!-- DataGrid -->
            <RowDefinition Height="250"/>
            <!-- Formulário -->
            <RowDefinition Height="*"/>
            <!-- Gráfico -->
        </Grid.RowDefinitions>

        <!-- Tabela de fichas -->
        <DataGrid x:Name="dgGradeSheets"
                  Grid.Row="0"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  SelectionMode="Single"
                  SelectionChanged="dgGradeSheets_SelectionChanged"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" />
                <DataGridTextColumn Header="Student ID" Binding="{Binding StudentId}" />
                <DataGridTextColumn Header="Class ID" Binding="{Binding ClassId}" />
                <DataGridTextColumn Header="Date Created" Binding="{Binding CreatedDate}" />
                <DataGridTextColumn Header="Comments" Binding="{Binding Comments}" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- Campos e botões -->
        <StackPanel Grid.Row="1" Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <StackPanel Margin="10">
                    <Label Content="Student ID" />
                    <TextBox x:Name="txtStudentId" Width="200"/>
                    <Label Content="Class ID" />
                    <TextBox x:Name="txtClassId" Width="200"/>
                </StackPanel>

                <StackPanel Margin="10">
                    <Label Content="Date Created" />
                    <DatePicker x:Name="dpCreatedDate" Width="200"/>
                    <Label Content="Comments" />
                    <TextBox x:Name="txtComments" Width="200"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="10">
                <Button x:Name="btnCreate" Content="Create" Width="75" Margin="5" Click="btnCreate_Click"/>
                <Button x:Name="btnEdit" Content="Edit" Width="75" Margin="5" Click="btnEdit_Click"/>
                <Button x:Name="btnDelete" Content="Delete" Width="75" Margin="5" Click="btnDelete_Click"/>
            </StackPanel>
        </StackPanel>

        <!-- Gráfico -->
        <oxy:PlotView x:Name="plotView" Grid.Row="2" Margin="10" Height="300"/>
    </Grid>
</Page>

