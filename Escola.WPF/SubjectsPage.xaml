<Page x:Class="Escola.WPF.SubjectsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Escola.WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DisciplinasPage">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <Button Name="btnCreate" Content="Create" Width="100" Margin="5" Click="btnCreate_Click"/>
            <Button Name="btnEdit" Content="Edit" Width="100" Margin="5" Click="btnEdit_Click"/>
            <Button Name="btnDelete" Content="Delete" Width="100" Margin="5" Click="btnDelete_Click"/>
            <Button Content="Associate Teacher" Width="140" Margin="2" Click="btnAssociateTeacher_Click"/>
        </StackPanel>

        <!-- Input Fields (Labels and TextBoxes) -->
        <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,10">
            <!-- Subject Name -->
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="Subject Name:" Width="150" VerticalAlignment="Center" Background="White"/>
                <TextBox Name="txtSubjectName" Width="200" />
            </StackPanel>

            <!-- Weekly Hours -->
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="Weekly Hours:" Width="150" VerticalAlignment="Center" Background="White"/>
                <TextBox Name="txtWeeklyHours" Width="200" />
            </StackPanel>

            <!-- Teacher Association -->
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <Label Content="Select Teacher:" Width="150" VerticalAlignment="Center" Background="White"/>
                <ComboBox Name="cbTeachers" Width="200" DisplayMemberPath="FullName" SelectedValuePath="Id"/>
            </StackPanel>
        </StackPanel>
        
        

        <!-- Subjects DataGrid -->
        <DataGrid Name="dgSubjects"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  SelectionMode="Single"
                  IsReadOnly="True" SelectionChanged="dgSubjects_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Weekly Hours" Binding="{Binding WeeklyHours}" Width="*"/>
                <DataGridTextColumn Header="Teachers" Binding="{Binding TeacherNames}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
