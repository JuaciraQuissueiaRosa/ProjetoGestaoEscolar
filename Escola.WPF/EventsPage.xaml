<Page x:Class="Escola.WPF.EventsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Escola.WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="883.806"
      Title="EventsPage">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Formulário -->
            <RowDefinition Height="Auto"/>
            <!-- ComboBox de associação -->
            <RowDefinition Height="Auto"/>
            <!-- Botões -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Text="Events Page" FontSize="20" FontWeight="Bold" Margin="15,0,0,15" />
        <!-- Formulário de entrada -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="5">
                <TextBlock Text="Name:"/>
                <TextBox Name="txtName" Width="150" Margin="0,5,0,0"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="5">
                <TextBlock Text="Data do Evento:"/>
                <TextBox Name="dpEventDate" Width="150" Margin="0,5,0,0"/>

                <TextBlock Text="Hora do Evento:" Margin="0,10,0,0"/>
                <TextBox Name="txtEventTime" Width="150" Margin="0,5,0,0" />
            </StackPanel>

            <StackPanel Grid.Column="2" Margin="5">
                <TextBlock Text="Location:"/>
                <TextBox Name="txtLocation" Width="150" Margin="0,5,0,0"/>
            </StackPanel>

            <StackPanel Grid.Column="3" Margin="5">
                <TextBlock Text="Description:"/>
                <TextBox Name="txtDescription" Width="150" Margin="0,5,0,0"/>
            </StackPanel>
        </Grid>

        <!-- ComboBoxes para associar -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5,0,10">
            <StackPanel Margin="5">
                <TextBlock Text="Select Student:" />
                <ComboBox Name="cbStudents" Width="150" DisplayMemberPath="FullName" SelectedValuePath="Id"/>
            </StackPanel>
            <StackPanel Margin="5">
                <TextBlock Text="Select Teacher:" />
                <ComboBox Name="cbTeachers" Width="150" DisplayMemberPath="FullName" SelectedValuePath="Id"/>
            </StackPanel>
        </StackPanel>

        <!-- Botões -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Left" Margin="0,0,0,15" Width="950">
            <Button Name="btnCreate" Content="Create" Width="100" Margin="5" Click="btnCreate_Click"/>
            <Button Name="btnEdit" Content="Edit" Width="100" Margin="5" Click="btnEdit_Click"/>
            <Button Name="btnDelete" Content="Delete" Width="100" Margin="5" Click="btnDelete_Click"/>
            <Button Content="Add Teacher" Width="120" Margin="5" Click="btnAssociateTeacher_Click"/>
            <Button Content="Add Student" Width="120" Margin="5" Click="btnAssociateStudent_Click"/>
            <Button Content="Remove Student" Width="120" Margin="5" Click="btnRemoveStudent_Click"/>
            <Button Content="Remove Teacher" Width="120" Margin="5" Click="btnRemoveTeacher_Click"/>
        </StackPanel>

        
        <!-- DataGrid -->
        <DataGrid Name="dgEvents" Grid.Row="3" AutoGenerateColumns="False" SelectionMode="Single" IsReadOnly="True" SelectionChanged="dgEvents_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                <DataGridTextColumn Header="Event Date" Binding="{Binding EventDate, StringFormat='dd/MM/yyyy'}" Width="*"/>
                <DataGridTextColumn Header="Event Hour" Binding="{Binding EventTime}" Width="*"/>
                <DataGridTextColumn Header="Location" Binding="{Binding Location}" Width="*"/>
                <DataGridTextColumn Header="Students" Binding="{Binding StudentNames}" Width="*"/>
                <DataGridTextColumn Header="Teachers" Binding="{Binding TeacherNames}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
